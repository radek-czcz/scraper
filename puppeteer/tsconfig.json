{
  "extends": "@tsconfig/node18/tsconfig.json",
  "$schema": "https://json.schemastore.org/tsconfig",

  "_version": "18.2.0",

  "compilerOptions": {
    "lib": ["es2023", "dom"],
    "module": "node16",
    "target": "es2022",
      "types": [ "node" ],
      "typeRoots": [ "../node_modules/@types" ],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16",
    "target": "es5",
    "allowJs": true,
    "outDir": "./built",
  },
  "include": ["./src/**/*"],


}